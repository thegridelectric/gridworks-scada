Screen {
    layout: vertical;
}

#mqtt_state {
    height: 1fr;
    border: solid $border;
}

#message_table {
    height: 3fr;
    border: solid $border;
}

#relays_table {
    height: 6fr;
    border: solid $border;
}

Button {
    margin: 1 2;
    border-title-color: $text;
}

#relay_toggle_button_container {
    layout: horizontal;
    border: solid $border;
    align: center middle;
}

RelayToggleButton {
    width: 40;
    height: 3;
    margin: 0 1;
    padding: 0 0;
    text-style: bold;
}

RelayControlButtons {
    layout: horizontal;
    width: 1fr;
    align: center middle;
    border: solid $border;
}

#deenergized_button {
    width: 30;
    height: 3;
    margin: 0 1;
    padding: 0 0;
}

#energized_button {
    width: 30;
    height: 3;
    margin: 0 1;
    padding: 0 0;
}


.undisplayed {
    display: none;
}